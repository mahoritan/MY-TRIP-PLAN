<div class="container-fluid">
  <div class="row">
    <div class="col no-gutters">
      <%= image_tag('img/login_img.jpg', class: "img-fluid") %>
      <div class="card-img-overlay">
        <div class="card col-md-4 mx-auto">
          <div class="card-body">
            <div class="card-title text-center mb-3">
              <h4>ログイン</h4>
            </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row justify-content-center text-center mb-3">
              <div class="field">
                <%= f.label "メールアドレス" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
          <div class="row justify-content-center text-center mb-3">
            <div class="field">
              <%= f.label "パスワード" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
          </div>
        <% if devise_mapping.rememberable? %>
          <div class="field text-center">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="row justify-content-center mt-3 mb-5">
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-outline-secondary" %>
          </div>
        </div>
        <% end %>
        <div class="row justify-content-center">
          <%= link_to "新規登録はこちら", new_user_registration_path, class: 'text-muted mb-3' %>
        </div>
        <div class="row justify-content-center">
          <%= link_to "パスワードを忘れた方はこちら", new_user_password_path, class: 'text-muted mb-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
