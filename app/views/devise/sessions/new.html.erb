<div class="container">
  <div class="row mt-5 mb-3">
    <h4>ログイン</h4>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row mb-3">
    <div class="field">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="field">
      <%= f.label "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="row mt-3 mb-5 ml-1">
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>

  <div class="row">
    <%= link_to "新規登録はこちら", new_user_registration_path, class: 'text-muted mb-3' %>
  </div>
  <div class="row">
    <%= link_to "パスワードを忘れた方はこちら", new_user_password_path, class: 'text-muted mb-3' %>
  </div>
</div>
