<div class="container">
  <div class="row mt-5 mb-3">
    <h4>会員登録</h4>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row mb-3">
    <div class="field">
      <%= f.label "ニックネーム" %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="field">
      <%= f.label "性別" %><br />
      <%= f.label "男性" %>
      <%= f.radio_button :gender, :man %>
      <%= f.label "女性" %>
      <%= f.radio_button :gender, :woman %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="field">
      <%= f.label "プロフィール文" %>
      <%= f.text_area :introduction, autofocus: true, class: "form-control", placeholder: "国内旅行・温泉めぐりが好きです！等" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="field">
      <%= f.label "居住地" %>
      <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, class: 'form-select' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="field">
      <%= f.label 'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="field">
      <%= f.label 'パスワード' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="field">
      <%= f.label 'パスワード(確認用)' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="actions">
      <%= f.submit "登録する", class: "btn btn-outline-secondary" %>
    </div>
  </div>

<% end %>

  <div class="row">
    <div class="offset-md-9">
      <%= link_to "ログインはこちら", new_user_session_path, class: 'text-muted' %>
    </div>
  </div>
</div>