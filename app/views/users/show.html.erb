<div class="jumbotron">
  <div class="container-fluid">
    <h2>MYPAGE</h2>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="co-md-4">
      <%= attachment_image_tag @user, :image_id, format: 'jpeg', fallback: "img/no_image.jpg", size: "130x130" %>
    </div>
    <div class="offset-md-1 col-md-7">
      <h3><%= @user.name %></h3>
      <h5 class="mt-4"><%= @user.prefecture.name %></h5>
      <p class="mt-4"><%= @user.introduction %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 ml-1">
      <% if @user.id == current_user.id %>
        <%= link_to "編集する", edit_user_path(@user.id), class: 'btn btn-outline-secondary' %>
      <% end %>
    </div>
  </div>

  <% @plans.each do |plan| %>
    <div class="row mt-3">
      <div class="col-md-4">
        <%= link_to plan_path(plan.id) do %>
          <%= attachment_image_tag plan, :plan_image, :fill, 250, 167, format: 'jpeg' %>
        <% end %>
      </div>
      <div class="col-md-8">
        <h4><%= link_to plan.title, plan_path(plan.id) %></h4>
        <p class="mt-3"><%= plan.plan_introduction %></p>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @plans %>
